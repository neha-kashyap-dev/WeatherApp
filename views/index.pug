extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Search Place

        // Search form
        form(method='POST' action='/weather')
          div.form-group
            label(for='place') Place:
            input#place.form-control(type='text', placeholder='Place' name='place' value=place)
          button.btn.btn-primary(type='submit') Search Place

        div.row
          div.col-sm-3 Location
          div.col-sm-9 #{location}
        div.row
          div.col-sm-3 Weather
          div.col-sm-9 #{weather}